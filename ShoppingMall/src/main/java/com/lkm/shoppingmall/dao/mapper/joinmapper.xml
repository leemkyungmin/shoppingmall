<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.lkm.shoppingmall.dao.joinDAO">
	<select id="uIdcheck" parameterType="String" resultType="int">
		SELECT COUNT(*)
		FROM USERS
		WHERE USERID = #{param1}
	</select>
	<insert id="signinMember" parameterType="com.lkm.shoppingmall.dto.userDto">
		INSERT INTO USERS(UIDX,USERID,UPW,UNAME,UADDRESS,UPHONE,UPHOTO,UPOINT,UREG_DATE) VALUES(
			USERS_SEQ.NEXTVAL,
			'${uSerid}',
			'${uPw}',
			'${uName}',
			'${uAddress}',
			'${uPhone}',
			'null',
			0,
			SYSDATE
		)
	</insert>

</mapper>